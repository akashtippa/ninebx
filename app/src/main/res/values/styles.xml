<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SelectableItemTheme">
        <item name="colorControlHighlight">@color/grey_200</item>
    </style>

    <style name="SelectableItemBackground">
        <item name="android:theme">@style/SelectableItemTheme</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="dayTextViewStyle">
        <item name="android:layout_width">@dimen/_31sdp</item>
        <item name="android:background">@drawable/day_selector</item>
        <item name="android:layout_height">@dimen/_31sdp</item>
        <item name="android:layout_margin">@dimen/_4sdp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_selector</item>
    </style>

    <style name="italicViewStyle">
        <item name="android:textStyle">italic</item>
    </style>


    <style name="MyRadioButton" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/grey_100</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="SpinnerwithNoArrow" parent="@android:style/Widget.Spinner">
        <item name="android:background">@android:drawable/edit_text</item>
    </style>


    <!-- LIGHT Theme -->
    <style name="Theme_Light_Base" parent="@style/ContactPicker_Theme_Light">
        <!-- ActionBarCompat -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme_Light" parent="@style/Theme_Light_Base" />

    <!-- DARK Theme -->
    <style name="Theme_Dark_Base" parent="@style/ContactPicker_Theme_Dark">
        <!-- ActionBarCompat -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="Theme_Dark" parent="@style/Theme_Dark_Base" />

</resources>

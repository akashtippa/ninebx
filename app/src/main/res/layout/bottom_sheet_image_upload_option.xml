<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/bottomSheetLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:padding="@dimen/default_margin"
    app:behavior_hideable="false"
    app:behavior_peekHeight="100dp"
    app:layout_behavior="@string/bottom_sheet_behavior">

    <LinearLayout
        android:id="@+id/llCamera"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_48"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivCamera"
            android:layout_width="@dimen/default_big"
            android:layout_height="@dimen/default_big"
            android:layout_marginStart="@dimen/default_mini_padding"
            app:srcCompat="@drawable/ic_camera"
            android:layout_marginLeft="@dimen/default_mini_padding" />

        <TextView
            android:id="@+id/tvShareParents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_big"
            android:text="@string/action_camera"
            android:textColor="@color/black"
            android:textSize="@dimen/text_14"
            android:layout_marginLeft="@dimen/default_big"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llGallery"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_48"
        android:layout_below="@+id/llCamera"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivGallery"
            android:layout_width="@dimen/default_big"
            android:layout_height="@dimen/default_big"
            android:layout_marginStart="@dimen/default_mini_padding"
            app:srcCompat="@drawable/ic_gallery"
            android:layout_marginLeft="@dimen/default_mini_padding" />

        <TextView
            android:id="@+id/tvShareCoach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_big"
            android:text="@string/action_gallery"
            android:textColor="@color/black"
            android:textSize="@dimen/text_14"
            android:layout_marginLeft="@dimen/default_big"
            />
    </LinearLayout>

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/margin_72"
    android:layout_marginLeft="@dimen/default_mini_margin"
    android:layout_marginRight="@dimen/default_mini_margin"
    android:orientation="horizontal">


    <com.github.vipulasri.timelineview.TimelineView
        android:id="@+id/time_marker"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:visibility="visible"
        app:line="@color/grey_500"
        app:lineSize="2dp"
        app:marker="@drawable/marker"
        app:markerSize="20dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/default_mini_margin"
        android:layout_marginTop="@dimen/default_mini_margin"
        android:layout_toEndOf="@+id/time_marker"
        android:layout_toRightOf="@+id/time_marker">


        <LinearLayout
            android:id="@+id/layoutMemoryHolder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:background="@color/colorGrey"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgMemoryImage"
                android:layout_width="@dimen/margin_56"
                android:layout_height="@dimen/margin_56"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/default_margin"
                android:layout_marginStart="@dimen/default_margin"
                app:srcCompat="@drawable/ic_icon_add_photo_memories_grey" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/default_margin"
                android:layout_marginStart="@dimen/default_margin"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtMemoryTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Memory Title" />

                <TextView
                    android:id="@+id/txtMemoryDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Feb 15th, 2017" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutEditOrDelete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@color/colorGrey"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/default_margin"
                app:srcCompat="@drawable/ic_icon_edit" />

            <ImageView
                android:id="@+id/imgDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:visibility="visible"
                app:srcCompat="@drawable/ic_icon_delete_icon" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
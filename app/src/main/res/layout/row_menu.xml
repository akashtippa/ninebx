<?xml version="1.0" encoding="utf-8"?>
<com.ninebx.ui.home.customView.GridViewItem xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/menu_bg">


    <RelativeLayout
        android:id="@+id/layoutBg"
        android:layout_width="wrap_content"
        android:padding="@dimen/_2sdp"
        android:layout_height="wrap_content"
        android:background="@drawable/grid1">

        <TextView
            android:id="@+id/menuTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawableTop="@drawable/ic_home_icon_contacts"
            android:gravity="center"
            android:paddingLeft="@dimen/_2sdp"
            android:paddingRight="@dimen/_2sdp"
            android:text="Home &amp; Money"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_10sdp" />

    </RelativeLayout>


</com.ninebx.ui.home.customView.GridViewItem>
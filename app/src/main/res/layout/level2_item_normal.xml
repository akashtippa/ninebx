<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/default_mini_padding"
    android:layout_marginStart="@dimen/default_mini_padding"
    android:layout_marginTop="@dimen/default_mini_padding"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_14"

        android:layout_marginLeft="@dimen/default_mini_padding"
        android:layout_marginStart="@dimen/default_mini_padding"
        android:layout_marginTop="@dimen/_10sdp"
        android:hint="Location" />

    <EditText
        android:id="@+id/etSubHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_mini_padding"
        android:textSize="@dimen/text_14"

        android:background="@null"
        android:hint="@string/location"
        android:inputType="textCapWords"
        android:visibility="visible" />


    <Spinner
        android:id="@+id/spinnerAccountType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/default_mini_padding"
        android:layout_marginTop="@dimen/default_mini_padding"
        android:background="@null"
        android:entries="@array/AccountType"
        android:visibility="gone" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.ninebx.ui.tutorial.activity.WalkThroughActivity">


    <android.support.v4.view.ViewPager
        android:id="@+id/view_subscription"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/margin_24"
        android:visibility="visible">

    </android.support.v4.view.ViewPager>


    <com.ninebx.ui.tutorial.view.CirclePageIndicator
        android:id="@+id/indicator_subscription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/_15sdp"
        android:minHeight="24dp"
        app:centered="true"
        app:fillColor="@color/colorPrimary"
        app:pageColor="@color/grey_400"
        app:radius="4dp"
        app:strokeColor="#E0E0E0"
        app:strokeWidth="0dp" />
</RelativeLayout>

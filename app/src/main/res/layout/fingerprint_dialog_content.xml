<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fingerprint_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/fingerprint_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/description_fingerprint_icon"
        app:srcCompat="@drawable/ic_icon_touchid" />

    <TextView
        android:id="@+id/mainTitleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fingerprint_icon"
        android:gravity="center"
        android:text="@string/touch_id_for_ninebx"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/fingerprint_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/mainTitleTextView"
        android:gravity="center"
        android:text="@string/fingerprint_description"
        android:textAppearance="@android:style/TextAppearance.SearchResult.Subtitle"
        android:textColor="?android:attr/textColorSecondary" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:layout_below="@+id/fingerprint_description"
        android:layout_marginTop="@dimen/default_mini_margin"
        android:background="@color/divider_color" />


</RelativeLayout>
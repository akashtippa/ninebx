<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/default_mini_margin"
    android:layout_marginStart="@dimen/default_mini_margin">

    <TextView
        android:id="@+id/txtListSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="@dimen/default_mini_margin"
        android:drawableRight="@drawable/ic_arrow_right"
        android:text="@string/app_name"
        android:drawableEnd="@drawable/ic_arrow_right" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/divider_color"
        android:layout_below="@+id/txtListSearch" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/pass_code_background"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/enter_your_ninebx_passcode"
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/default_margin"
            android:paddingRight="@dimen/default_margin"
            android:paddingTop="@dimen/default_margin"
            android:visibility="visible">

            <ImageView
                android:id="@+id/ivOtp1"
                android:layout_width="@dimen/default_margin"
                android:layout_height="@dimen/default_margin"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/default_mini_padding"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:src="@drawable/pass_code_selector"
                android:textColor="@color/white"
                tools:text="4" />

            <ImageView
                android:id="@+id/ivOtp2"
                android:layout_width="@dimen/default_margin"
                android:layout_height="@dimen/default_margin"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/default_mini_padding"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:src="@drawable/pass_code_selector"
                android:textColor="@color/white"
                tools:text="4" />

            <ImageView
                android:id="@+id/ivOtp3"
                android:layout_width="@dimen/default_margin"
                android:layout_height="@dimen/default_margin"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/default_mini_padding"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:src="@drawable/pass_code_selector"
                android:textColor="@color/white"
                tools:text="4" />

            <ImageView
                android:id="@+id/ivOtp4"
                android:layout_width="@dimen/default_margin"
                android:layout_height="@dimen/default_margin"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/default_mini_padding"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:src="@drawable/pass_code_selector"
                android:textColor="@color/white"
                tools:text="4" />

            <ImageView
                android:id="@+id/ivOtp5"
                android:layout_width="@dimen/default_margin"
                android:layout_height="@dimen/default_margin"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/default_mini_padding"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:src="@drawable/pass_code_selector"
                android:textColor="@color/white"
                tools:text="4" />

            <ImageView
                android:id="@+id/ivOtp6"
                android:layout_width="@dimen/default_margin"
                android:layout_height="@dimen/default_margin"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/default_mini_padding"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:minWidth="@dimen/margin_48"
                android:src="@drawable/pass_code_selector"
                android:textColor="@color/white"
                tools:text="4" />

        </LinearLayout>

        <EditText
            android:id="@+id/etPassCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_78sdp"
            android:layout_marginRight="@dimen/_78sdp"
            android:background="@android:color/transparent"
            android:cursorVisible="false"
            android:gravity="center"
            android:inputType="number"
            android:maxEms="6"
            android:textColor="@android:color/transparent"
            android:visibility="visible" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:layout_marginLeft="@dimen/_78sdp"
            android:layout_marginRight="@dimen/_78sdp"
            android:background="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:id="@+id/tvNum1"
                    style="@style/SelectableItemBackground"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:padding="@dimen/default_margin"
                    android:text="@string/num_one"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_22" />

                <TextView
                    android:id="@+id/tvNum2"
                    style="@style/SelectableItemBackground"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:padding="@dimen/default_margin"
                    android:text="@string/num_two"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_22" />

                <TextView
                    android:id="@+id/tvNum3"
                    style="@style/SelectableItemBackground"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:padding="@dimen/default_margin"
                    android:text="@string/num_three"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_22" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:id="@+id/tvNum4"
                    style="@style/SelectableItemBackground"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:padding="@dimen/default_margin"
                    android:text="@string/num_four"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_22" />

                <TextView
                    android:id="@+id/tvNum5"
                    style="@style/SelectableItemBackground"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:padding="@dimen/default_margin"
                    android:text="@string/num_five"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_22" />

                <TextView
                    android:id="@+id/tvNum6"
                    style="@style/SelectableItemBackground"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:padding="@dimen/default_margin"
                    android:text="@string/num_six"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_22" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:id="@+id/tvNum7"
                    style="@style/SelectableItemBackground"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:padding="@dimen/default_margin"
                    android:text="@string/num_seven"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_22" />

                <TextView
                    android:id="@+id/tvNum8"
                    style="@style/SelectableItemBackground"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:padding="@dimen/default_margin"
                    android:text="@string/num_eight"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_22" />

                <TextView
                    android:id="@+id/tvNum9"
                    style="@style/SelectableItemBackground"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:padding="@dimen/default_margin"
                    android:text="@string/num_nine"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_22" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="@dimen/default_margin"
                    android:textSize="@dimen/text_22" />

                <TextView
                    android:id="@+id/tvNum0"
                    style="@style/SelectableItemBackground"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:padding="@dimen/default_margin"
                    android:text="@string/num_zero"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_22" />

                <ImageView
                    android:id="@+id/ivBack"
                    style="@style/SelectableItemBackground"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:padding="@dimen/default_margin"
                    android:text="@string/num_nine"
                    android:textSize="@dimen/text_22"
                    app:srcCompat="@drawable/ic_backspace" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tvCancel"
            style="@style/SelectableItemBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginEnd="@dimen/default_margin"
            android:layout_marginRight="@dimen/default_margin"
            android:clickable="true"
            android:focusable="true"
            android:padding="@dimen/default_margin"
            android:text="@string/cancel"
            android:textColor="@color/white" />
    </LinearLayout>


</LinearLayout>
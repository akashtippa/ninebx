<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/default_mini_padding"
    android:paddingStart="@dimen/default_mini_padding"
    android:paddingTop="@dimen/default_mini_padding"
    android:background="@color/white">

    <TextView
        android:id="@+id/txtHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/default_mini_padding"
        android:layout_marginStart="@dimen/default_mini_padding"
        android:layout_marginTop="@dimen/default_mini_padding"
        android:hint="" />

    <Switch
        android:id="@+id/switchView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="@dimen/default_mini_padding" />
    <View
        android:layout_width="match_parent"
        android:layout_below="@id/switchView"
        android:layout_height="@dimen/divider_height"
        android:background="@color/divider_color"/>

</RelativeLayout>
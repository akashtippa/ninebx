<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutFragmentSuperSubList"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/progressLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />

        <TextView
            android:id="@+id/tvProgress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/progressBar"
            android:gravity="center"
            android:text="@string/loading" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/layoutAddList">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp">

                <TextView
                    android:id="@+id/txtHideCompleted"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:padding="@dimen/default_mini_padding"
                    android:text="@string/hide_completed"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:id="@+id/txtShowCompleted"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:padding="@dimen/default_mini_padding"
                    android:text="@string/show_completed"
                    android:textColor="@color/colorPrimary"
                    android:visibility="gone" />

                <CheckBox
                    android:id="@+id/txtCheckAll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:padding="@dimen/default_mini_padding"
                    android:text="@string/check_all"
                    android:textColor="@color/colorPrimary"
                    android:visibility="visible" />

                <CheckBox
                    android:id="@+id/txtUnCheckAll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:padding="@dimen/default_mini_padding"
                    android:text="@string/uncheck_all"
                    android:textColor="@color/colorPrimary"
                    android:visibility="gone" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_48"
                android:background="@color/grey_100"
                android:gravity="center">

                <EditText
                    android:id="@+id/txtSubListName"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_48"
                    android:background="@color/grey_100"
                    android:gravity="center"
                    android:text="@string/app_name"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:id="@+id/txtDone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:hint="Done"
                    android:padding="@dimen/default_margin"
                    android:textColorHint="@color/colorPrimary"
                    android:visibility="invisible" />

            </RelativeLayout>


            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvAddedSubLists"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/default_mini_margin"
                android:nestedScrollingEnabled="false" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_margin="@dimen/_5sdp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/created"
                        android:textColor="@color/colorPrimary" />

                    <TextView
                        android:id="@+id/txtCreatedUser"
                        style="@style/italicViewStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dummy User, Jan 11, 2018, 1531" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/last_modified"
                        android:textColor="@color/colorPrimary" />

                    <TextView
                        android:id="@+id/txtModifiedUser"
                        style="@style/italicViewStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dummy User, Jan 11, 2018, 1531"
                        android:textStyle="italic" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/_5sdp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/privates"
                        android:textColor="@color/colorPrimary" />

                    <Switch
                        android:id="@+id/swPrivate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </RelativeLayout>


        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:id="@+id/layoutAddList"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_alignParentBottom="true"
        android:background="@color/grey_100"
        android:gravity="center">

        <EditText
            android:id="@+id/edtAddSubList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:background="@null"
            android:drawableLeft="@drawable/ic_icon_add_list"
            android:drawablePadding="@dimen/_5sdp"
            android:drawableStart="@drawable/ic_icon_add_list"
            android:hint="@string/add_list"
            android:singleLine="true" />

        <TextView
            android:id="@+id/txtSubListDone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:hint="@string/done"
            android:padding="@dimen/default_margin"
            android:textColorHint="@color/colorPrimary"
            android:visibility="invisible" />

    </RelativeLayout>


</RelativeLayout>
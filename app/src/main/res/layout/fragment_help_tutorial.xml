<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/walkthrough_bg"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgDescription"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_200sdp"
        android:layout_centerInParent="true"
        android:src="@drawable/walkthrough_2" />

    <LinearLayout
        android:id="@+id/layoutHeadingText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgDescription"
        android:layout_margin="@dimen/_5sdp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titleHelpText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="be"
            android:textSize="@dimen/_17sdp" />

        <TextView
            android:id="@+id/titleHelpTextExtended"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="organized"
            android:textSize="@dimen/_17sdp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_54sdp"
        android:layout_below="@+id/layoutHeadingText"
        android:background="@color/black">

        <TextView
            android:id="@+id/textDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp"
            android:text="Gather your family's information in one place"
            android:textColor="@color/white" />

    </RelativeLayout>

</RelativeLayout>
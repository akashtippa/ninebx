<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:background="@color/white"
    android:layout_height="wrap_content">



    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:visibility="gone"
        android:id="@+id/layoutImage">


        <android.support.v7.widget.CardView
            android:layout_width="@dimen/margin_48"
            android:layout_height="@dimen/margin_48"
            android:id="@+id/cvAttachment"
            android:layout_margin="@dimen/default_mini_padding"
            app:cardElevation="0dp"
            app:cardCornerRadius="@dimen/default_mini_margin">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_launcher"
                android:id="@+id/ivAttachment"
                />
        </android.support.v7.widget.CardView>

        <de.hdodenhof.circleimageview.CircleImageView
            app:civ_border_color="@color/grey_400"
            app:civ_border_width="4dp"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/default_micro_padding"
            android:layout_marginRight="@dimen/default_micro_padding"
            app:civ_circle_background_color="@color/white"
            android:layout_width="@dimen/default_margin"
            android:layout_height="@dimen/default_margin"
            android:id="@+id/ivDelete"
            android:src="@drawable/ic_icon_cancel_red"
            app:srcCompat="@drawable/ic_icon_cancel_red"
            tools:ignore="RtlHardcoded,VectorDrawableCompat" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/layoutAddImage">

        <android.support.v7.widget.CardView
            android:layout_width="@dimen/margin_48"
            android:layout_height="@dimen/margin_48"
            android:id="@+id/cvAddAttachment"
            app:cardElevation="0dp"
            android:layout_margin="@dimen/default_mini_padding"
            app:cardCornerRadius="@dimen/default_mini_margin">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_icon_add_photo_memories_grey"
                android:id="@+id/ivAddAttachment"
                />
        </android.support.v7.widget.CardView>

    </FrameLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:layout_toEndOf="@+id/layoutImage"
        android:layout_toRightOf="@+id/layoutImage"
        android:background="@color/transparent_white"
        android:layout_marginRight="@dimen/default_margin"
        android:layout_marginEnd="@dimen/default_margin"
        android:enabled="false"
        android:id="@+id/etAttachment"
        android:text="@string/attachment_name"
        android:textSize="@dimen/_14sdp"
        />

    <View
        android:layout_width="match_parent"
        android:visibility="gone"
        android:id="@+id/dividerView"
        android:layout_below="@+id/layoutImage"
        android:layout_height="1dp"
        android:background="@color/grey_100" />

</RelativeLayout>
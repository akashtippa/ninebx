<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:ignore="NestedWeights">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/toolbarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/grey_100"
            app:popupTheme="@style/AppTheme.PopupOverlay">


            <ImageView
                android:id="@+id/imgToolbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:contentDescription="@string/app_name"
                android:src="@drawable/logo"
                android:visibility="visible" />


        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>




    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbarLayout"
        android:id="@+id/boxLayout"
        android:padding="@dimen/default_mini_padding"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:weightSum="3">
        <TextView
            android:id="@+id/tvTapABox"
            android:gravity="center"
            android:padding="@dimen/default_mini_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_14sdp"
            android:text="@string/tap_a_box"
            android:textSize="@dimen/_18sdp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/_14sdp"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:id="@+id/txtHome"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/default_micro_padding"
                android:layout_weight="1"
                android:background="@drawable/bg_home"
                android:drawablePadding="@dimen/_1sdp"
                android:drawableTop="@drawable/ic_home_icon_home_money_up"
                android:gravity="center"
                android:padding="@dimen/default_margin"
                android:text="@string/home_amp_money"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_9sdp" />


            <TextView
                android:id="@+id/txtTravel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/default_micro_padding"
                android:layout_weight="1"
                android:background="@drawable/bg_travell"
                android:drawablePadding="@dimen/_5sdp"
                android:drawableTop="@drawable/ic_home_icon_travel"
                android:gravity="center"
                android:padding="@dimen/default_margin"
                android:text="@string/travel"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_9sdp" />


            <TextView
                android:id="@+id/txtContacts"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/default_micro_padding"
                android:layout_weight="1"
                android:background="@drawable/bg_contacts"
                android:drawablePadding="@dimen/_5sdp"
                android:drawableTop="@drawable/ic_home_icon_contacts"
                android:gravity="center"
                android:padding="@dimen/default_margin"
                android:text="@string/contacts"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_9sdp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:id="@+id/txtEducation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/default_micro_padding"
                android:layout_weight="1"
                android:background="@drawable/bg_education"
                android:drawablePadding="@dimen/_2sdp"
                android:drawableTop="@drawable/ic_home_icon_education_work"
                android:gravity="center"
                android:padding="@dimen/default_margin"
                android:text="@string/education_work"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_9sdp" />


            <TextView
                android:id="@+id/txtPersonal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/default_micro_padding"
                android:layout_weight="1"
                android:background="@drawable/bg_personal"
                android:drawablePadding="@dimen/_5sdp"
                android:drawableTop="@drawable/ic_home_icon_personal"
                android:gravity="center"
                android:padding="@dimen/default_margin"
                android:text="@string/personal"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_9sdp" />


            <TextView
                android:id="@+id/txtInterests"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/default_micro_padding"
                android:layout_weight="1"
                android:background="@drawable/bg_interests"
                android:drawablePadding="@dimen/_5sdp"
                android:drawableTop="@drawable/ic_home_icon_interests"
                android:gravity="center"
                android:padding="@dimen/default_margin"
                android:text="@string/interests"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_9sdp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:id="@+id/txtWellness"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/default_micro_padding"
                android:layout_weight="1"
                android:background="@drawable/bg_wellness"
                android:drawablePadding="@dimen/_5sdp"
                android:drawableTop="@drawable/ic_home_icon_wellness"
                android:gravity="center"
                android:padding="@dimen/default_margin"
                android:singleLine="true"
                android:text="@string/wellness"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_9sdp" />


            <TextView
                android:id="@+id/txtMemories"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/default_micro_padding"
                android:layout_weight="1"
                android:background="@drawable/bg_memories"
                android:drawablePadding="@dimen/_5sdp"
                android:drawableTop="@drawable/ic_home_icon_memories"
                android:gravity="center"
                android:padding="@dimen/default_margin"
                android:text="@string/memories"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_9sdp" />


            <TextView
                android:id="@+id/txtShopping"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/default_micro_padding"
                android:layout_weight="1"
                android:background="@drawable/bg_shopping"
                android:drawablePadding="@dimen/_5sdp"
                android:drawableTop="@drawable/ic_home_icon_shopping"
                android:gravity="center"
                android:padding="@dimen/default_margin"
                android:text="@string/shopping"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_9sdp" />


        </LinearLayout>


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layoutQuickAdd"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/default_mini_padding"
        android:layout_marginRight="@dimen/default_mini_padding"
        android:layout_marginEnd="@dimen/default_mini_padding">

        <TextView
            android:id="@+id/tvQuickAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/_13sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_13sdp"
            android:text="@string/quick_add" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgCameraNineBx"
            android:layout_width="@dimen/_32sdp"
            android:layout_height="@dimen/_32sdp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/tvQuickAdd"
            android:layout_toRightOf="@+id/tvQuickAdd"
            android:src="@drawable/ic_icon_add_photo_memories"
            tools:ignore="VectorDrawableCompat" />

    </RelativeLayout>


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/collapsingToolbarLayout"
        style="@style/AppTheme.AppBarOverlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        app:elevation="@dimen/toolbar_elevation">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/toolbarColor"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:titleTextColor="@color/colorPrimary">

            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/authenticate_device"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_16" />

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/collapsingToolbarLayout"
        android:layout_margin="@dimen/default_margin"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="@dimen/default_mini_padding"
            android:paddingRight="@dimen/default_mini_padding"
            android:text="@string/enter_six_digit_code"
            android:textColor="@color/textColorRed"
            android:textSize="@dimen/text_16" />

        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/app_name"
            android:textSize="@dimen/text_16" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etOtp1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:minWidth="@dimen/margin_48"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textStyle="bold"
                tools:text="4" />

            <EditText
                android:id="@+id/etOtp2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:minWidth="@dimen/margin_48"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textStyle="bold"
                tools:text="4" />

            <EditText
                android:id="@+id/etOtp3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:minWidth="@dimen/margin_48"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textStyle="bold"
                tools:text="4" />

            <EditText
                android:id="@+id/etOtp4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:minWidth="@dimen/margin_48"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textStyle="bold"
                tools:text="4" />

            <EditText
                android:id="@+id/etOtp5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:minWidth="@dimen/margin_48"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textStyle="bold"
                tools:text="4" />

            <EditText
                android:id="@+id/etOtp6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:minWidth="@dimen/margin_48"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textStyle="bold"
                tools:text="4" />

        </LinearLayout>

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="@dimen/_170sdp"
            android:layout_height="@dimen/_32sdp"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/default_margin"
            android:layout_marginTop="@dimen/_14sdp"
            android:background="@drawable/login_btn"
            android:gravity="center"
            android:text="@string/submit"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_14sdp" />

        <TextView
            android:id="@+id/tvResend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="@dimen/default_mini_padding"
            android:text="@string/resend_otp"
            android:textColor="@color/colorAccent" />


    </LinearLayout>


</RelativeLayout>

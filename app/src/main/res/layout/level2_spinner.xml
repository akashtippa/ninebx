<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:padding="@dimen/default_mini_padding"
        android:text="Location" />

    <EditText
        android:id="@+id/tvSubTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_micro_padding"
        android:layout_toLeftOf="@id/tvCount"
        android:layout_toStartOf="@id/tvCount"
        android:background="@null"
        android:drawableRight="@drawable/ic_add_circle_outline_blue_300_24dp"
        android:gravity="center_vertical"
        android:padding="@dimen/default_mini_padding"
        android:singleLine="true"
        android:textColor="@color/black"
        tools:text="@string/app_name" />


</LinearLayout>
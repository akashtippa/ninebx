<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/default_mini_padding"
    android:layout_marginStart="@dimen/default_mini_padding"
    android:layout_marginTop="@dimen/default_mini_padding"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/default_mini_padding"
        android:text="sadsadasd" />

    <EditText
        android:id="@+id/etSubHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:drawableEnd="@drawable/ic_add_circle_outline_blue_300_24dp"
        android:drawablePadding="@dimen/default_mini_padding"
        android:drawableRight="@drawable/ic_add_circle_outline_blue_300_24dp"
        android:gravity="center_vertical"
        android:hint="asdasda"
        android:padding="@dimen/default_mini_padding"
        android:singleLine="true" />


</LinearLayout>
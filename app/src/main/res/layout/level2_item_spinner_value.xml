<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/default_mini_padding"
    android:layout_marginStart="@dimen/default_mini_padding"
    android:layout_marginTop="@dimen/default_mini_padding"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/default_mini_padding"
        android:layout_marginStart="@dimen/default_mini_padding"
        android:layout_marginTop="@dimen/_10sdp"
        android:hint="" />

    <Spinner
        android:id="@+id/spinnerValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/default_mini_padding"
        android:layout_marginTop="@dimen/default_mini_padding"
        android:background="@null"
        android:entries="@array/AccountType"
        android:visibility="visible" />

</LinearLayout>
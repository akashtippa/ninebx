<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/layoutImage">


        <android.support.v7.widget.CardView
            android:layout_width="@dimen/margin_48"
            android:layout_height="@dimen/margin_48"
            android:id="@+id/cvAttachment"
            android:layout_margin="@dimen/default_mini_padding"
            app:cardCornerRadius="@dimen/default_mini_margin">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_launcher"
                android:id="@+id/ivAttachment"
                />
        </android.support.v7.widget.CardView>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="@dimen/default_margin"
            android:layout_gravity="right"
            android:id="@+id/ivDelete"
            app:srcCompat="@drawable/places_ic_clear"/>
    </FrameLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/layoutImage"
        android:layout_toRightOf="@+id/layoutImage"
        android:background="@color/transparent_white"
        android:layout_marginRight="@dimen/default_margin"
        android:layout_marginEnd="@dimen/default_margin"
        android:enabled="false"
        android:id="@+id/etAttachment"
        android:text="@string/attachment_name"
        android:textSize="@dimen/_14sdp"
         />

    <View
        android:layout_width="match_parent"
        android:id="@+id/dividerView"
        android:layout_below="@+id/layoutImage"
        android:layout_height="1dp"
        android:background="@color/grey_100" />

</RelativeLayout>